{
  "name": "mywallet3-electron",
  "version": "1.0.0",
  "description": "Gerenciador Financeiro Pessoal Local com Electron",
  "main": "main.js",
  "scripts": {
    "start": "electron . --no-sandbox",
    "build:win": "electron-builder --win",
    "build:linux": "electron-builder --linux",
    "postinstall": "electron-builder install-app-deps",
    "rebuild": "electron-rebuild"
  },
  "author": "Voce",
  "license": "ISC",
  "dependencies": {
    "body-parser": "^1.20.2",
    "cors": "^2.8.5",
    "express": "^4.18.2",
    "better-sqlite3": "^11.0.0",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "electron": "^28.3.0",
    "electron-builder": "^24.9.1",
    "electron-rebuild": "^3.2.9"
  },
  "build": {
    "appId": "com.mywallet3.app",
    "productName": "MyWallet3",
    "directories": {
      "output": "dist"
    },
    "files": [
      "**/*",
      "!node_modules/*",
      "!dist/*",
      "!src/libs/tailwindcss.js" 
    ],
    "extraResources": [
      "bd_gestor_financeiro.db"
    ],
    "win": {
      "target": "nsis",
      "icon": "build/icon.ico" 
    },
    "linux": {
      "target": "AppImage"
    }
  }
}